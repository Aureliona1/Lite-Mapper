{
	"name": "@aurellis/lite-mapper",
	"version": "1.4.2",
	"license": "MIT",
	"exports": "./mod.ts",
	"publish": {
		"include": [
			"./mod.ts",
			"./src",
			"./README.md",
			"./docs.md",
			"./LICENSE"
		],
		"exclude": [
			"./images",
			"./github",
			"./test"
		]
	},
	"imports": {
		"@aurellis/helpers": "jsr:@aurellis/helpers@^1.4.5",
		"fast-simplex-noise": "npm:fast-simplex-noise@^4.0.0"
	},
	"lint": {
		"include": [
			"./src/",
			"./mod.ts"
		],
		"rules": {
			"tags": [
				"jsr"
			]
		}
	},
	"tasks": {
		"commit": {
			"description": "Run pre-commit checks.",
			"command": "deno doc --lint mod.ts && deno lint && deno test --allow-all"
		}
	},
	"test": {
		"include": [
			"./test/"
		]
	}
}